<article class="hero">
	<p class="hero__text">
		Read our minds.
	</p>
</article>

<div class="column__wrapper">
	<% blog_posts.each do |post| %>
	<article class="post">
		<header class="post__header">
			<h2 class="post__title"><%= post['title'] %></h2>
			<p class="post__meta">
				<span class="post__date"><%= Time.parse( post['date'] ).strftime("%m/%d/%Y") %></span>
				<span class="post__author"><%= post['author'] %></span>
			</p>	
		</header>
		<div class="post-content">
			<p><%= post['excerpt'] %></p>
		</div>
		<a class="read-more" href="#0">Read more. â†’</a>
	</article>
	<% end %>	
</div>

