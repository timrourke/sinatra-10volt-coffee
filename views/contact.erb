<article class="hero">
	<p class="hero__text">
		Meet the team.
	</p>
</article>

<div class="column__wrapper">
	<section>	
		<h2>Corporate Directory</h2>
		
		<div class="directory">
			<div class="col-group clearfix">
				<% (1..12).each do %>
					<div class="directory__record col-1-2 col-group clearfix">
						<div class="directory__avatar col-1-6">
							<img src="<%= Faker::Avatar.image %>" alt="">
						</div>
						<div class="directory-contact__info col-5-6 col-last">
							<span class="directory__name"><%= Faker::Name.first_name %> <%= Faker::Name.last_name %></span>
							<span class="directory__title"><%= Faker::Name.title %></span>
							<span class="directory__email"><a href="#0"><%= Faker::Internet.email %></a></span>
							<span class="directory__phone"><%= Faker::PhoneNumber.phone_number %> x<%= Faker::PhoneNumber.extension %></span>	
						</div>
					</div>
				<% end %>	
			</div>
			
		</div>
	</section>	
</div>